<p style="color: green"><%= notice %></p>

<% content_for :title, @course.name %>

<h1 class="text-3xl py-4"><%= @course.name %></h1>

<div>
  <%= link_to "< Back to courses", courses_path, class: "text-blue-500 hover:underline" %>
</div>

<div id="course-<%= @course.id %>" class="course-card border p-4 rounded-lg mb-10">
  <p class="course-heading text-gray-600"><%= @course.heading %></p>
  <p class="course-description"><%= @course.description %></p>
  <p class="course-status text-gray-500"><%= @course.is_published ? "Published" : "Unpublished" %></p>
  <img class="course-image w-full h-48 object-cover" src="<%= @course.image_url %>" alt="<%= @course.name %>">
  <%= render partial: "enrollments/enrollments_list", locals: { enrollments: @enrollments } %>
</div>
