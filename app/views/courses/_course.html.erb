<div id="course-<%= course.id %>" class="course-card border p-4 rounded-lg shadow hover:shadow-lg transition-shadow duration-300">
  <h2 class="course-name text-lg"><%= course.name %></h2>
  <p class="course-heading text-gray-600"><%= course.heading %></p>
  <p class="course-description"><%= course.description %></p>
  <p class="course-status text-gray-500"><%= course.is_published ? "Published" : "Unpublished" %></p>
  <img class="course-image w-full h-48 object-cover" src="<%= course.image_url %>" alt="<%= course.name %>">
</div>
